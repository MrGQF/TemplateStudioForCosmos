{
    "$schema": "http://json.schemastore.org/template",
    "author": "Microsoft",
    "classifications": [
        "Universal"
    ],
    "name": "ts.Avalonia.Project.Desktop",
    "shortName": "ts.Avalonia.Project.Desktop",
    "identity": "ts.Avalonia.Project.Desktop",
    "tags": {
        "language": "C#",
        "type": "project",
        "ts.outputToParent": "true",
        "ts.type": "composition",
        "ts.platform": "Avalonia",
        "ts.version": "1.0.0",
        "ts.compositionOrder": "0",
        "ts.compositionFilter": "$projectType == Desktop & ts.type == project"
    },
    "sourceName": "ts.ItemName",
    "preferNameDirectory": true,
    "PrimaryOutputs": [
        {
            "path": "Param_ProjectName.Desktop/Param_ProjectName.Desktop.csproj"
        }
    ],
    "symbols": {
        "ts.rootNamespace": {
            "type": "parameter",
            "replaces": "Param_RootNamespace"
        },
        "ts.projectName": {
            "type": "parameter",
            "replaces": "Param_ProjectName",
            "fileRename": "Param_ProjectName"
        },
        "Framework": {
            "type": "parameter",
            "description": "The target framework for the project.",
            "datatype": "choice",
            "choices": [
                {
                    "choice": "net7.0",
                    "description": "Target net7.0"
                }
            ],
            "replaces": "FrameworkParameter",
            "defaultValue": "net7.0"
        }
    }
}
