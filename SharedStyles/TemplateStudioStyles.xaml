    <!--#region ItemsControl-->

    <Style x:Key="TSItemsControl" TargetType="ItemsControl">
        <Setter Property="Focusable" Value="False" />
    </Style>

    <Style
        x:Key="TSItemsControlWithScroll"
        BasedOn="{StaticResource TSItemsControl}"
